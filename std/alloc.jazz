fun alloc<T>(value: T): mut T* {
    var ptr = cast<mut T*>(malloc(sizeof(T))!);
    ptr.init(value);
    return ptr;
}

fun allocArray<T>(size: int): mut T[?]* {
    return cast<mut T[?]*>(malloc(sizeof(T) * uint64(size))!);
}

fun delete<T>(ptr: mut T*) {
    free(ptr);
}

fun delete<T>(ptr: mut T*?) {
    free(ptr);
}

